#include <stdio.h>

int main()
{
    int a,i,j;
    printf("enter the size of star : ");
    scanf("%d",&a);
    for(i=0;i<=a+1;i++)
    {
        for(j=0;j<=a-i+1;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}


